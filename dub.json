{
	"name": "d-message-box",
	"description": "A simple message box for the D programming language",
	"authors": [
		"Matthew Brennan Jones <matthew.brennan.jones@gmail.com>",
	],
	"homepage": "https://github.com/workhorsy/d-message-box",
	"copyright": "Copyright (c) 2017 Matthew Brennan Jones",
	"license": "BSL-1.0",
	"importPaths": ["source/"],
	"targetPath": "lib",


	"targetName": "message_box",
	"targetType": "staticLibrary",
	"dependencies": {
		"d-glob": "~>0.3.0",
		"d-message-box-dlangui": { "path": "d-message-box-dlangui" },
	},

	"preBuildCommands" : [
		"echo `date`",
		"#rdmd $PACKAGE_DIR/source/compressed_file.d $PACKAGE_DIR/tools/files_to_data.d",
		"#cd $PACKAGE_DIR/d-message-box-dlangui; dub build --arch=x86_64",
		"cd $PACKAGE_DIR/d-message-box-dlangui/files_to_data; dub run --arch=x86_64 --build=debug"
	]
}
