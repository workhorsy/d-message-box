{
	"name": "d-message-box",
	"description": "A simple message box for the D programming language",
	"authors": [
		"Matthew Brennan Jones <matthew.brennan.jones@gmail.com>",
	],
	"homepage": "https://github.com/workhorsy/d-message-box",
	"copyright": "Copyright (c) 2017 Matthew Brennan Jones",
	"license": "BSL-1.0",
	"importPaths": ["source/"],
	"targetPath": "lib",

	"sourceFiles": ["d-message-box-dlangui/files_to_data/data.d"],

	"targetName": "message_box",
	"targetType": "staticLibrary",
	"dependencies": {
		"d-glob": "~>0.3.0",
	},

	"preGenerateCommands" : [
		"echo \"!!! pre d-message-box\"",
		"cd $PACKAGE_DIR\\d-message-box-dlangui && dub build --arch=%DUB_ARCH% --build=%DUB_BUILD_TYPE%",
		"cd $PACKAGE_DIR\\d-message-box-dlangui\\files_to_data && dub run --arch=%DUB_ARCH% --build=%DUB_BUILD_TYPE%",
	],
	"postGenerateCommands" : [
		"echo \"!!! post d-message-box\"",
	]
}
